<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    app:layout_constraintTop_toBottomOf="@id/hot_post_title_text_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="@drawable/home_balance_button_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/option_percentage_background_linear_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:background="@drawable/vote_option_blue_background"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/option_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. ë´„"
        android:textColor="@color/white"
        android:layout_gravity="left|center"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"/>
</FrameLayout>